@page
@model OpenCredentialPublisher.ClrWallet.Pages.Links.CreateModel
@{
    ViewData["Title"] = "Create a shareable credential";
}

<div class="row mt-5">
    <div class="col">
        <section class="default-container p-5">
            <h1>@ViewData["Title"]</h1>

            <div class="alert alert-primary font-16">
                To share your credential:
                <ol>
                    <li>
                        Give your credential a Nickname to remember where it is being sent
                    </li>
                    <li>
                        The Create button will generate a shareable link that can be shared with interested parties.
                    </li>
                </ol>
            </div>

            <form method="post">
                <table class="table table-responsive">
                    <thead>
                        <tr>
                            <th colspan="4">Credential</th>
                            <th colspan="2">Link</th>
                        </tr>
                        <tr>
                            <th>Publisher</th>
                            <th>Name</th>
                            <th>Published</th>
                            <th>Added</th>
                            <th>Nickname</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (var i = 0; i < Model.Links.Count; i++)
                        {
                            var index = i;

                        <tr>
                            <td>
                                <input type="hidden" asp-for="Links[index].SourceName" />
                                <input type="hidden" asp-for="Links[index].PublisherName" />
                                @Model.Links[index].PublisherName
                            </td>
                            <td>
                                <input type="hidden" asp-for="Links[index].Name" />
                                @Model.Links[index].Name
                            </td>
                            <td>
                                <input type="hidden" asp-for="Links[index].CreatedAt" />
                                @Model.Links[index].CreatedAt
                            </td>
                            <td>
                                <input type="hidden" asp-for="Links[index].AddedOn" />
                                @Model.Links[index].AddedOn
                            </td>
                            <td class="form-group">
                                <input type="text" class="form-control" asp-for="Links[index].Nickname" />
                                <span asp-validation-for="Links[index].Nickname" class="text-danger"></span>
                            </td>
                            <td class="form-group">
                                <input type="hidden" asp-for="Links[index].ClrId" />
                                <input type="hidden" asp-for="Links[index].SourceId" />
                                <button type="submit" class="btn btn-primary" asp-route-clrId="@Model.Links[index].ClrId">Create</button>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </form>

            <a asp-page="./Index">Back to shared credentials</a>
        </section>
    </div>
</div>
