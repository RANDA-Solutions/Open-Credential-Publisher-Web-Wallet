@page
@model OpenCredentialPublisher.ClrWallet.Pages.Sources.RegisterModel
@{
    ViewData["Title"] = "Connect CLR Source";
}
<div class="row mt-5">
    <div class="col">
        <section class="default-container p-5">
            <h1>Connect CLR Source</h1>

            <div asp-validation-summary="ModelOnly" class="alert alert-danger mt-2"></div>

            <div class="alert alert-primary">
                <p>
                    A CLR source is a platform which has one or more of your CLRs. This application connects to the source to
                    get your CLRs.
                </p>
            </div>

            <form method="post">
                <button style="visibility:hidden;" id="btnSubmit" type="submit" class="btn btn-primary">Submit</button>
                <div class="form-group">
                    <label asp-for="SelectedSource">Select a known source</label>
                    <select asp-for="SelectedSource" asp-items="@Model.Sources" class="custom-select">
                        <option value="">Select a source</option>
                    </select>
                    <span asp-validation-for="SelectedSource" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SourceUrl">Or enter the URL for a new source</label>
                    <input type="url" asp-for="SourceUrl" class="form-control" placeholder="Enter the source platform URL" />
                    <span asp-validation-for="SourceUrl" class="text-danger"></span>
                </div>
                <button id="btnConnect" type="button" class="btn btn-primary" onclick="connect()">Connect</button>
            </form>

            <div class="mt-2">
                <a asp-page="./Index">Back to List of Sources</a>
            </div>
        </section>
    </div>
    <div id="modal-connect-provider" class="modal" role="dialog" style="font-size:13px;">
        <div class="modal-dialog">
            <div class="modal-content" style="padding-bottom:60px;">
                <div class="modal-header" style="border-bottom:none;">
                    <div class="col-12">
                    <h4>Use your Badgr Login to connect to Badgr.</h4>
                    </div>
                </div>
                <div class="modal-body">
                    <form id="formClientLogin" method="post" asp-page-handler="Basic">
                        <input id="hidSelectedSource" type="hidden" name="SelectedSourceBasic" />
                        <div class="input-group mb-3">
                            <div class="input-group-prepend mr-3">
                                <span><i class="fal fa-user fa-2x icon-color"></i></span>
                            </div>
                            <input name="username" placeholder="Username or Email" class="form-control" />
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend mr-3">
                                <span><i class="fal fa-lock-alt fa-2x icon-color"></i></span>
                            </div>
                            <input name="password" placeholder="Password" class="form-control" type="password"/>
                        </div>
                    <p>This information is sent directly to Badgr and for your protection is never saved by Teacher Wallet.</p>
                        <div class="row mt-5 justify-content-around">
                                <button type="submit" id="btn-login-form" class="btn btn-outline-primary btn-lg">LOGIN</button>
                                <button type="button" id="btn-login-cancel" class="btn btn-outline-primary btn-lg"  data-dismiss="modal">CANCEL</button>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>        
        $(".modal-dialog").css("width", "60%");
        
        function connect() {
            if ("@(Model.ClientSourceIds)".length > 0 && $("#SelectedSource").val())
            {
                var clientIds = "@(Model.ClientSourceIds)".split(",");
                if (clientIds.includes($("#SelectedSource").val())) {
                    $("#hidSelectedSource").val($("#SelectedSource").val());
                    $('#modal-connect-provider').modal({backdrop: 'static'});
                } else {
                    $("#btnSubmit").click();
                }
            } else {
                 $("#btnSubmit").click();
            }
        }
    </script>
}