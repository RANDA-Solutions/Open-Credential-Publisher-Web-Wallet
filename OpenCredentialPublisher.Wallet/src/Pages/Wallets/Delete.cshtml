@page
@using OpenCredentialPublisher.Wallet.Extensions;
@model OpenCredentialPublisher.Wallet.Pages.Wallets.DeleteModel
@{
    ViewData["Title"] = "Delete Relationship";
}

<div class="row mt-5">
    <div class="col">
        <section class="default-container p-5">
            <h1>Delete</h1>

            <div class="alert alert-primary">
                Delete a relationship you've created with your mobile wallet
            </div>
            <div class="alert alert-danger">
                If you delete this relationship, a new relationship will have to be created with your mobile wallet if you wish to send your credentials to it.
            </div>

            <div asp-validation-summary="ModelOnly" class="alert alert-danger mt-2"></div>

            @if (Model.Relationship != null)
            {
                <h3>Are you sure you want to delete this relationship?</h3>
                <div>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">Identifier</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Relationship.RelationshipDid)
                        </dd>
                        <dt class="col-sm-2">Created</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Relationship.CreatedOn)
                        </dd>
                    </dl>

                    <form method="post">
                        <input type="submit" value="Delete" class="btn btn-outline-danger btn-lg float-right" />
                        <a asp-page="./Index">Back to List of Relationships</a>
                    </form>
                </div>
            }
            else
            {
        <a asp-page="./Index">Back to List of Relationships</a>
            }
        </section>
    </div>
</div>
