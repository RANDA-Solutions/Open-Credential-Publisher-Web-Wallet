@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<section class="forgot-password-form">
    <h2>@ViewData["Title"]</h2>
    <h4>Enter your email.</h4>
    <hr />
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input placeholder="Email" asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-outline-primary mr-3" id="btn-forgot-password">Submit</button>
        <a id="login" asp-page="./Login">CANCEL</a>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
