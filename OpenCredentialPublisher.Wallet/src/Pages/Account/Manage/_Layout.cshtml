@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout))
    {
        Layout = (string)parentLayout;
    }
    else
    {
        Layout = "/Pages/Shared/_Layout.cshtml";
    }
}

<div class="row mt-5">
    <div class="col">
        <section class="default-container p-5">

            <h2>
                Manage your account <br/>
                <small class="text-muted">Change your account settings</small>
            </h2>

            <hr />
            <div class="row">
                <div class="col-md-3">
                    <partial name="_ManageNav" />
                </div>
                <div class="col-md-9">
                    @RenderBody()
                </div>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
