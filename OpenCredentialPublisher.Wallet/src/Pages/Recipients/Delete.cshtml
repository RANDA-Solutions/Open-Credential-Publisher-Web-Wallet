@page
@model OpenCredentialPublisher.ClrWallet.Pages.Recipients.DeleteModel

@{
    ViewData["Title"] = "Delete";
    var dict = new Dictionary<string, string> { { "LinkId", Model.LinkId } };

}

<div class="row mt-5">
    <div class="col">
        <section class="default-container p-5">
            <h1>Delete</h1>

            <div class="alert alert-primary">
                A recipient is someone that may receive a link that you wish to share with them.
            </div>
            <div class="alert alert-danger">
                If you delete this recipient, they will no longer be able to view any links that you have sent them. 
            </div>

            <div asp-validation-summary="ModelOnly" class="alert alert-danger mt-2"></div>

            @if (Model.Recipient != null)
            {
                <h3>Are you sure you want to delete this recipient?</h3>
                <div>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">Name</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Recipient.Name)
                        </dd>
                    </dl>
                    <dl class="row">
                        <dt class="col-sm-2">Email</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Recipient.Email)
                        </dd>
                    </dl>

                    <form method="post">
                        <input type="hidden" name="id" value="@Model.Recipient.Id" />
                        <input type="hidden" name="linkId" value="@Model.LinkId" />
                        <input type="submit" value="Delete" class="btn btn-outline-danger btn-lg" /> |
                        <a asp-page="./Index" asp-all-route-data="dict">Back to List of Recipients</a>
                    </form>
                </div>
            }
            else
            {
                <a asp-page="./Index" asp-all-route-data="dict">Back to List of Recipients</a>
            }
        </section>
    </div>
</div>